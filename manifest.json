{
  "manifest_version": 3,
  "name": "Lizard Focus Tracker",
  "version": "1.0",
  "description": "Track focus using browser activity. Logs focused/unfocused periods, shows stats, and rewards streaks.",
  "permissions": [
    "tabs",
    "storage",
    "notifications",
    "idle",
    "alarms",
    "activeTab",
    "scripting"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "16.png",
      "48": "48.png",
      "128": "128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "16.png",
    "48": "48.png",
    "128": "128.png"
  }
}

{
  "manifest_version": 3,
  "name": "Lizard Focus Tracker",
  "version": "1.0",
  "description": "Tracks your focus based on webcam activity, tab visibility, and user interaction.",
  "permissions": ["tabs", "storage", "idle", "notifications"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "16.png",
      "48": "48.png",
      "128": "128.png"
    }
  },
  "web_accessible_resources": [
  {
    "resources": ["128.png"],
    "matches": ["<all_urls>"]
  }
],
"background": {
  "service_worker": "background.js"
  }

}

{
  "manifest_version": 3,
  "name": "Lizard Focus Tracker",
  "version": "1.0",
  "description": "Tracks your focus based on webcam activity, tab visibility, and user interaction.",
  "permissions": ["tabs", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "16.png",
      "48": "48.png",
      "128": "128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
